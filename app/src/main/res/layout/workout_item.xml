<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/workout_spinner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:gravity="center"
        android:textColor="#f55547"
        android:textSize="11sp"
        app:layout_constraintBottom_toTopOf="@id/bottom_divider"
        app:layout_constraintEnd_toStartOf="@id/muscle_groups_worked_out"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_divider" />

    <TextView
        android:id="@+id/muscle_groups_worked_out"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:textColor="#394045"
        app:flow_wrapMode="aligned"
        app:layout_constraintBottom_toTopOf="@id/bottom_divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/workout_spinner"
        app:layout_constraintTop_toBottomOf="@id/top_divider"
        tools:text="task1" />

    <!--    <TextView-->
    <!--        android:id="@+id/time_worked_out"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="match_parent"-->
    <!--        app:layout_constraintBottom_toTopOf="@id/bottom_divider"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/top_divider"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        android:gravity="center_vertical"-->
    <!--        android:layout_marginEnd="20dp"-->
    <!--        android:textColor="#f55547"-->
    <!--        tools:text="biceps, triceps, arms"-->
    <!--        />-->

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>